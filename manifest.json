{
  "manifest_version": 2,
  "name": "DOMFuzz Helper",
  "version": "4.0.0",

  "description": "For fuzz-testing browsers",

  "applications": {
    "gecko": {
      "id": "fuzzpriv@fuzzing.mozilla.org"
    }
  },

  "background": {
    "scripts": ["fuzzpriv.js", "browser-polyfill.min.js"]
  },

  "content_scripts": [
    {
      "matches": ["file:///*", "http://127.0.0.1/*", "http://localhost/*"],
      "js": ["inject.js", "browser-polyfill.min.js"]
    }
  ]
}
